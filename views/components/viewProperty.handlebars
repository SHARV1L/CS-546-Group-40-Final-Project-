<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Properties</title>
  <link rel="stylesheet" href="../../styles/components-styles/viewProperty.css">
    <script>
    function bookNow(listingId) {
      window.location.href = '/search/property_search_by_id/' + listingId;
    }
  </script>
</head>
<body>
  <h1>Properties</h1>
  <table>
    <thead>
      <tr>
        <th>Property Name</th>
        <th>Description</th>
        <th>Number of Rooms</th>
        <th>Number of Bathrooms</th>
        <th>Amenities</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Price per Night</th>
        <th>Availability</th>
        <th>Image</th>
        {{!-- <th>Property link</th> --}}
      </tr>
    </thead>
    <tbody>
      {{#each properties}}
        <tr>
          <td>{{this.propertyName}}</td>
          <td>{{this.description}}</td>
          <td>{{this.numberOfRooms}}</td>
          <td>{{this.numberofBathrooms}}</td>
          <td>{{this.amenities}}</td>
          <td>{{this.address}}</td>
          <td>{{this.latitude}}</td>
          <td>{{this.longitude}}</td>
          <td>{{this.pricePerNight}}</td>
          <td>{{this.availability}}</td>
          <td>{{this.images}}</td>
          {{!-- <td><button class="book-now-button" onclick="bookNow('{{this.id}}')">View Property</button></td> --}}
        </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/logout">Logout</a>
</body>
</html>
