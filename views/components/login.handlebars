<header id="login-header">
  <h1>User Login</h1>
</header>
<main id="login-main"> 
  <div class="login-form" id="login-form-container">
    <form id="login-form" action="/login" method="post">
      <label for="username">Username:</label>
      <input type="text" placeholder="Enter your username" id="login-username" name="username" required>
      <label for="password">Password:</label>
      <input type="password" placeholder="Enter your password" id="login-password" name="password" required>
      <button type="submit" id="login-btn">Login</button>
    </form>
    <p>Don't have an account? <a href="/sign-up">Register here</a>.</p>
  </div>
</main>
<script src="../../styles/client-side/loginValidation.js"></script>