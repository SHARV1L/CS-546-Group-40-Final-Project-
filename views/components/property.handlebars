<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Property Details</title>
    <link rel="stylesheet" href="/styles/components-styles/guestPage.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
  </head>
  <body>
      <script src="/styles/client-side/propertyClientSide.js"></script>
    <header>
      <h1>Property Details</h1>
    </header>
    <main>
      <div class="venue-details">
        
        <h2>{{propertyDetails.propertyName}}</h2>
          <span style = "display: flex;">
            <img alt={{propertyDetails.propertyName}} src={{propertyDetails.images}} style="width: 400px;height: 400px; margin-right: 100px">  
            <a id="map" style="height: 400px; width: 400px"></a>
          </span>
        </div>
        <button id="book" class="button-primary" onclick="bookNow('{{checkin}}','{{checkout}}','{{propertyDetails._id}}','{{propertyDetails.pricePerNight}}','{{propertyDetails.propertyName}}','{{propertyDetails.images}}')">Book Now</button>
        <button onclick="openMap('{{propertyDetails.address}}','{{propertyDetails.latitude}}', '{{propertyDetails.longitude}}')">View Location</button>
        <a href={{propertyDetails.listing_url}} target="_blank">Venue Information</a>
        <br>
        <address>
          Address:<br>
          {{propertyDetails.address}}<br>
         
        </address>
        
        <span>
            Rooms: {{propertyDetails.numberOfRooms}},
           
            BathsS: {{propertyDetails.numberofBathroom}},
            
            Amenities: {{#each propertyDetails.amenities}}
            <td>{{this}}</td>{{/each}}
        </span>
        <h4>Price: ${{propertyDetails.pricePerNight}} perNight</h4>
        <h4>Reviews</h4>
        {{#each propertyDetails.reviews}}
        <tr>
          <td>Rating: {{this.ratings}}</td>
        </tr>
        <tr>
          <td>Review: {{this.reviewText}}</td>
        </tr>
        {{/each}} 
      </div>
    </main>
  </body>
</html>
