<header id="guest-header">
  
</header>
<main id="guest-main">
  <br>
  <br>
  <div class="guest-form-container">
    <span>
      
      <form id="uploadForm" action="/guest/upload" method="POST">
        <label for="image">Choose a file to upload:</label>
        <input type="file" id="image" name="image">
        <button type="submit">Upload</button>
      </form>
      {{#if profilePicture}}
        <img src="data:{{user.profilePicture.mimetype}};base64, {{user.profilePictureBase64}}" alt="Profile Picture">
      {{/if}}
      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
      <h1>{{{title}}}</h1>
      <h2>Hello {{{user.firstName}}}! how are you? We missed you here!</h2>
    </span>  
  </div>

  {{!-- <h3>Hi, {{{user.firstName}}}! how have you been? </h3> --}}

  <br>
  <form id="guestHomepage" method="post" action="/guest/dashboard">
    <div class="buttons-container"> 
      <button id="personal-details" type="submit" name="selected_option" value="user_personal">Personal</button> 
      <button id="bookings" type="submit" name="selected_option" value="bookings">My Bookings</button> 
    </div>
    <br>

    <button id="search-property" type="submit" name="selected_option" value="search">Search Property</button>
  </form>

  <a href="/logout">Logout</a>
  {{!-- <a href="/user-pref" class="search-link">Make another search</a> --}}
</main>
